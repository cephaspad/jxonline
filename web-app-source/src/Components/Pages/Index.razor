@page "/"
@inherits JXOnlineWebComponentBase
<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-6 text-start">
                    <h5 class="card-title">Services (@lastChecked)</h5>
                </div>
                <div class="col-6 text-end">
                    <div class="btn-group">
                        <Button class="btn btn-primary" Clicked="StartAllAsync" Disabled="@isWorking">Start</Button>
                        <Button class="btn btn-danger" Clicked="StopAllAsync" Disabled="@isWorking">Stop</Button>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            @foreach (var serverAppProcess in serverAppProcesses)
            {
                <div class="row mb-2">
                    <div class="col-9 text-start">
                        @serverAppProcess.Info.Name
                    </div>
                    <div class="col-3 text-end">
                        @if (serverAppProcess.IsActive)
                        {
                            <Button Class="btn btn-danger" Disabled="@(isWorking && serverAppProcess.IsActivatingOrDeactivating)" Clicked="@(() => StopAsync(serverAppProcess))">Stop</Button>
                        }
                        else
                        {
                            <Button Class="btn btn-primary" Disabled="@(isWorking && serverAppProcess.IsActivatingOrDeactivating)" Clicked="@(() => StartAsync(serverAppProcess))">Start</Button>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>
